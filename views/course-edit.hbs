<h1>{{course.title}}</h1>

<form action="/courses/{{course.id}}?allow=true" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
        <label for="name">Course name</label>
        <span class="helper-text" data-error="Enter Cource name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" value="{{course.price}}" min="1" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter Price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">Coverage URL</label>
        <span class="helper-text" data-error="Set image URL"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary">Edit course</button>
</form>
