<h1>Orders</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Order #<em class="order-number">{{_id}}</em></span>
                        <p class="date">Date: {{date}}</p>
                        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
                        <ol>
                            {{#each courses}}
                                <li>{{course.title}} (x<strong>{{course.count}}</strong>)</li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>There is no order yet.</p>
{{/if}}