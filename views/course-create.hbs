<h1>Add new course</h1>

{{#if courseCreateError}}
    <p class="alert">{{courseCreateError}}</p>
{{/if}}

<form action="/courses" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter Course name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="1" required value="{{data.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter Price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">Coverage URL</label>
        <span class="helper-text" data-error="Set image URL"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Add course</button>
</form>