<h1>Add new course</h1>

<form action="/courses" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="name">Course name</label>
        <span class="helper-text" data-error="Enter Cource name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="1" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter Price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">Coverage URL</label>
        <span class="helper-text" data-error="Set image URL"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add course</button>
</form>